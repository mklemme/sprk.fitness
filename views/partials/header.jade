doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='csrf-token', content=_csrf)
    meta(name='author', content='')
    //- link(href='http://yui.yahooapis.com/pure/0.5.0/pure-min.css', rel='stylesheet' type='text/css')
    link(href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800', rel='stylesheet' type='text/css')
    title #{title} | Sprk.fitness

    != css('styles')
    
  body.poptart

    header
      h1.logo
        a(href='/').sprk--logo sprk.
          span.sprk--logo-fitness fitness
        span.tagline Fitness tracking for the rest of us
      nav
        .navItems
          a.navItem(href='/my/workouts') My workouts
          a.navItem.activ(href='#') Explore workouts

        // This is where the login logic goes for swapping out buttons if loggedin
        .buttonGroup
          if user
            a.button.buttonLrg.login(href='/my/dashboard') Dashboard
            a.button.buttonLrg.logout(href='/logout') Logout
          else
            a.button.buttonLrg.login(href='/login') Login
            a.button.buttonLrg.logout(href='/signup') Create Account
    include messages
